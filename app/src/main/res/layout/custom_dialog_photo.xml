<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/nen2"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/view_photo_dialog"
        android:scaleType="fitXY"
        android:contentDescription="@string/app_name"
        android:layout_width="match_parent"
        android:layout_above="@+id/view_function_dialog"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/view_function_dialog"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/dot_background_photo"
        android:layout_height="@dimen/h_100">

    </RelativeLayout>
</RelativeLayout>